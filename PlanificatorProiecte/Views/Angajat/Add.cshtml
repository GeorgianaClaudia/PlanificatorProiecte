@model PlanificatorProiecte.Models.Domain.Angajat
@{}


<div class="container pt-5">
    <div class="col-md-6">
        <form asp-action="Add" method="post">
            <div class="form-group">
                <h3>Adauga un angajat nou:</h3>
                <label asp-for="NumeAngajat">Nume angajat</label>
                <input type="text" class="form-control" asp-for="NumeAngajat" />
                <span asp-validation-for="NumeAngajat" class="text-danger"></span>
            </div>



            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                    @TempData["msg"]
                </div>
            }
            <div class="form-group pt-3">
            <button type="submit" class="btn btn-dark">Salveaza</button>
            <a href="/Angajat/GetAll" class="btn btn-primary">Lista</a>
            </div>
        </form>

    </div>


</div>

