@model PlanificatorProiecte.Models.Domain.Proiect
@{}

<div class="container pt-5">
    <div class="col-md-6">
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <h3>Modifica proiectul</h3>
                <label asp-for="NumeProiect">Nume proiect</label>
                <input type="text" class="form-control" asp-for="NumeProiect" />
                <span asp-validation-for="NumeProiect" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descriere">Descriere proiect</label>
                <input type="text" class="form-control" asp-for="Descriere" />
                <span asp-validation-for="Descriere" class="text-danger"></span>
            </div>

            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                    @TempData["msg"]
                </div>
            }
            <div class="form-group pt-3">
            <button type="submit" class="btn btn-dark">Salveaza</button>
            <a href="/Proiect/GetAll" class="btn btn-primary">List</a>
            </div>
        </form>

    </div>


</div>

